{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "paths": { "@root/*": ["./*"], "@/*": ["./src/*"] },
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
